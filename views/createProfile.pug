extends layout

block content
  div.createProfileContents
    h1 Create Account
    form(method="POST" action="/profile/create")
      h2 Username:
      input(type="text" name="username")
      h2 Password:
      input(type="password" name="password")
      h2 Confirm Password:
      input(type="password" name="password2")
      h2 Player ID:
      input(type="text" name="playerID")
      p <a href="/">Click Here</a> to find your Player ID
      div.disc
        input(type="checkbox" name="agreement")
        p I agree to my Player ID being used to sync my SWGoH account with SWGoHSIM
      button(type="submit" value="submit") Create Account